@model Punnel.App.Models.ErrorModel
@{
    Layout = "~/Views/Shared/_Layout1.cshtml";
    var statusCode = Model.StatusCode;
    var statusmessage = "";
    switch (statusCode)
    {
        case 400:
            statusmessage = "Yêu cầu không hợp lệ";
            break;
        case 403:
            statusmessage = "Không có quyền truy cập";
            break;
        case 404:
            statusmessage = "Rất tiếc, trang bạn tìm kiếm không tồn tại";
            break;
        case 408:
            statusmessage = "Hệ thống đang quá tải, xử lý phản hồi sẽ bị chậm";
            break;
        case 500:
            statusmessage = "Rất tiếc, đã có lỗi xảy ra";
            break;
        default:
            statusmessage = "Rất tiếc, đã có lỗi không mong muốn xảy ra!";
            break;
    }
    ViewBag.Title = statusmessage;
}

